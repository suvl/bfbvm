<div class="body-container">
  <div class="container-fluid">
    <div class="row bfbvm-content">
      <div class="col-sm-8 col-sm-offset-1 bfm-page-header">
        <h1><%= @page.title %></h1>
        <% if @items.any? %>
            <% @items.each do |item| %>
                <article class="news_item_truncated">
                  <h2><%= link_to item.title, refinery.news_item_path(item) %></h2>
                  <p>
                    <small><%= t('.published') %> <%= l(item.publish_date, :format => :long) %></small>
                  </p>
                  <% if item.image %>
                      <div class="row">
                        <div class="col-sm-3">
                          <%= image_tag item.image.url %>
                        </div>
                        <div class="col-sm-9 news-truncated-body">
                          <%= truncate  item.body, :length => 400,
                                        :omission => " ... #{link_to t('.read_more'), refinery.news_item_path(item)}",
                                        :preserve_html_tags => true %>
                        </div>
                      </div>
                  <% else %>
                      <%= truncate  item.body, :length => 400,
                                    :omission => " ... #{link_to t('.read_more'), refinery.news_item_path(item)}",
                                    :preserve_html_tags => true %>
                  <% end %>
                </article>
            <% end %>
            <%= will_paginate @items %>
        <% else %>
            <p><em><%= t('.no_items_yet') %></em></p>
        <% end %>
      </div>
    </div>
  </div>
</div>

